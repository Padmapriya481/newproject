# CODSOFT Python Internship Tasks

## ğŸ“ Task 1: To-Do List (Command Line)
tasks = []

def show_tasks():
    print("\nTo-Do List:")
    for idx, task in enumerate(tasks, 1):
        print(f"{idx}. {task}")

def add_task():
    task = input("Enter a new task: ")
    tasks.append(task)
    print("Task added.")

def delete_task():
    show_tasks()
    index = int(input("Enter task number to delete: ")) - 1
    if 0 <= index < len(tasks):
        tasks.pop(index)
        print("Task deleted.")
    else:
        print("Invalid number.")

while True:
    print("\n1. Add Task\n2. Show Tasks\n3. Delete Task\n4. Exit")
    choice = input("Choose an option: ")
    if choice == '1':
        add_task()
    elif choice == '2':
        show_tasks()
    elif choice == '3':
        delete_task()
    elif choice == '4':
        break
    else:
        print("Invalid choice.")


# -------------------------------------------
# ğŸ“ Task 2: Simple Calculator

def calculator():
    num1 = float(input("Enter first number: "))
    op = input("Enter operation (+, -, *, /): ")
    num2 = float(input("Enter second number: "))
    
    if op == '+':
        print("Result:", num1 + num2)
    elif op == '-':
        print("Result:", num1 - num2)
    elif op == '*':
        print("Result:", num1 * num2)
    elif op == '/':
        print("Result:", num1 / num2 if num2 != 0 else "Cannot divide by zero")
    else:
        print("Invalid operation.")

# Uncomment to run
# calculator()


